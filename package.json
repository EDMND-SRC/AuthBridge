{
  "name": "authbridge-monorepo",
  "author": "AuthBridge",
  "description": "AuthBridge is an identity verification and risk management platform. Compose verification processes for any vertical and geography using modular building blocks, components, and 3rd party integrations.",
  "private": true,
  "version": "0.1.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/authbridge/authbridge"
  },
  "keywords": [
    "authbridge",
    "fintech",
    "risk",
    "verification",
    "authentication",
    "authorization",
    "auth",
    "service",
    "identity",
    "kyc",
    "kyb"
  ],
  "scripts": {
    "branchlint": "branchlint -u -c --prefix \"$(git config --global user.name)\"",
    "format": "nx run-many --target=format",
    "lint": "nx run-many --target=lint --projects=@authbridge/web-sdk",
    "test": "nx run-many --target=test",
    "test:e2e": "nx run-many --target=test:e2e",
    "dev": "nx run-many --target=dev --projects=@authbridge/web-sdk,@authbridge/backoffice",
    "start": "nx run-many --target=start --projects=@authbridge/web-sdk",
    "build": "nx run-many --target=build --projects=@authbridge/web-sdk",
    "web-sdk:dev": "nx run @authbridge/web-sdk:dev",
    "web-sdk:start": "nx run @authbridge/web-sdk:start",
    "web-sdk:build": "nx run @authbridge/web-sdk:build",
    "web-sdk:example": "nx run @authbridge/web-sdk:example",
    "web-sdk:lint": "nx run @authbridge/web-sdk:lint",
    "web-sdk:format": "nx run @authbridge/web-sdk:format",
    "backoffice:dev": "nx run @authbridge/backoffice:dev",
    "workflow-builder:dev": "echo \"Error: no test specified\" && exit 1",
    "web-ui:dev": "echo \"Error: no test specified\" && exit 1",
    "commit": "git add . && git-cz",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "ci:local": "bash scripts/ci-local.sh",
    "ci:local:full": "bash scripts/ci-local.sh --full",
    "test:changed": "bash scripts/test-changed.sh",
    "test:burn-in": "bash scripts/burn-in.sh"
  },
  "license": "ISC",
  "devDependencies": {
    "@branchlint/cli": "^1.0.3",
    "@branchlint/default-config": "^1.0.1",
    "@changesets/changelog-git": "^0.1.13",
    "@changesets/cli": "^2.25.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "editorconfig": "^1.0.1",
    "husky": "^8.0.1",
    "nx": "15.0.2",
    "prettier": "^2.7.1"
  },
  "pnpm": {
    "overrides": {
      "vite@<3": "2.9.15"
    },
    "ignoredBuiltDependencies": [
      "esbuild",
      "svelte-preprocess"
    ]
  },
  "dependencies": {
    "deepmerge": "^4.2.2"
  }
}
